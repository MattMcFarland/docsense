{
  "extends": [
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "no-undef": "off"
  },
  "globals": {
    "log": true
  },
  "env": {
    "jest": true,
    "node": true,
    "es6": true,
    "browser": true
  }
}