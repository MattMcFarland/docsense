  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docsense Server",
      "identifier": "docsense-serve",
      "type": "npm",
      "promptOnClose": true,
      "script": "dev-docs",
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Docsense <Verbose> Server",
      "identifier": "docsense-serve-verbose",
      "type": "npm",
      "promptOnClose": true,
      "script": "docsense:serve:verbose",
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Watch",
      "identifier": "watch",
      "type": "process",
      "dependsOn": "build",
      "command": "node",
      "args": ["scripts/watch", "common"],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "promptOnClose": true,
      "problemMatcher": ["$tsc"]
    },
    {
      "group": "build",
      "label": "Build",
      "identifier": "build",
      "type": "npm",
      "script": "build:common",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
