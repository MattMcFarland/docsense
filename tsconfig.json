{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "watch": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "typeAcquisition": {
    "enable": true
  }
}
