{
  "compileOnSave": true,
  "compilerOptions": {
    "listEmittedFiles": false,
    "inlineSourceMap": true,
    "declarationDir": "types",
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "moduleResolution": "node",
    "newLine": "LF",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "./*/__tests__/**",
    "./*/__mocks__/**",
    "./*/__fixtures__/**",
    "./*/__snapshots__/**",
    "./**/*.snap.ts",
    "./src/*/__tests__/**",
    "./src/*/__mocks__/**",
    "./src/*/__fixtures__/**",
    "./src/*/__snapshots__/**"
  ],
  "include": ["./src/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
