{
  "compileOnSave": true,
  "compilerOptions": {
    "listEmittedFiles": false,
    "inlineSourceMap": true,
    "declarationDir": "types",
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "watch": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["./src/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
