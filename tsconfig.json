{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./",
    "pretty": true,
    "declaration": true,
    "declarationDir": "types",
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "allowSyntheticDefaultImports": true,
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts", "lib"],
  "typeAcquisition": {
    "enable": true
  }
}
