{
  "compilerOptions": {
    "outDir": "./dist/common",
    "pretty": true,
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts", "lib"],
  "typeAcquisition": {
    "enable": true
  }
}
